<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center"
    android:background="#f7f3f3"
    tools:context=".Soal_7Activity">

    <ImageView
        android:id="@+id/ivGambarIcon"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/boy"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ivGambarIcon"
        android:id="@+id/layoutRoot2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textSize="25dp"
            android:text="al-hasan"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:text=" musthafa " />

    </LinearLayout>

    <TextView
        android:layout_below="@+id/layoutRoot2"
        android:id="@+id/tvSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="software angineering"/>
    <ProgressBar
        android:layout_margin="20dp"
        android:layout_below="@+id/tvSubTitle"
        android:id="@+id/ProgressBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:layout_margin="70dp"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@+id/tvSubTitle"
        android:id="@+id/ProgressBar1"
        android:textColor="#a32cae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>